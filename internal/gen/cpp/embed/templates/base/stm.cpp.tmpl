void StateMachine::inputAcceptedCallback({{ template "in_callback_args" }})
{
{{-   block "in_callback" .Transitions.InMerged }}
{{-     template "in_callback.cpp.tmpl" . }}
{{-   end -}}
}
{{- end }}

